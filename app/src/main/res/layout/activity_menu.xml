<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fiap.rnogueira.splashscreen.MenuActivity"
    android:orientation="vertical"
    android:background="@color/mainBg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Dice"
        android:gravity="center_horizontal"
        android:textSize="40dp"
        android:layout_weight="0"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLayoutPlayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp">
        <EditText
            android:id="@+id/etPlayers"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:hint="Number of players"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="1"
            android:maxLines="1"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom">
        <Button
            android:id="@+id/btnConfirmPlayers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2c3dab"
            android:textColor="#FFF"
            android:layout_gravity="bottom"
            android:text="@string/BtnConfirm"/>
    </LinearLayout>
</LinearLayout>
